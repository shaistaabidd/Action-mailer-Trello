<div class = "board delete">
  
  <h1>Delete Board</h1>
  
  <%= form_for(@board, :url => board_path(@board), :method => 'delete')do |f| %>
    
    <p>Are you sure you want to delete this section </p>
    <p class = "reference-name"><%= @board.name%></p>


    <div class = "form-buttons">
      <%= f.submit("Delete Board") %>
    </div>
  <%end%>
</div>
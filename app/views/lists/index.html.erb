<h1>All Lists</h1>
<% if @lists.empty? %>
  <%= "No List is Added Yet!!!" %>
<% else %>
  <h4>Board Name : <%= @lists.first.board.name %></h4>
  <table class="table table-striped table-dark table-hover">
    <thead>
      <tr>
        <th scope="col">List Name</th>
        <th scope="col">Show</th>
        <th scope="col">Edit</th>
        <th scope="col">Destroy</th>
      </tr>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td><%= link_to 'Show List Cards', board_list_cards_path(list.board_id, list) %></td>
          <td><%= link_to 'Edit', edit_board_list_path(list.board_id, list) %></td>
          <td><%= link_to 'Destroy', board_list_path(list.board_id, list), method: :delete %></td>
        </tr>  
      <% end %>
      
    </tbody>
  </table>
<% end %>
<%= link_to "Add List",new_board_list_path(:cutom => '123') , class:"nav-link" %>      
<h1>Show Assigned Tasks</h1>

<table class = "table">
  <thead>
    <tr>
      <th scope = "col">Assigned to</th>
      <th scope = "col">Task</th>
      
      <th scope = "col">Created At</th>
      <th scope = "col">Updated At</th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td><%= @task.username %></td>
      <td><%= @task.task %></td>
      <td><%= @task.created_at %></td>
      <td><%= @task.updated_at %></td>
      
    </tr>
  </tbody>
  
  <%= link_to 'Back', tasks_path %>

</table>
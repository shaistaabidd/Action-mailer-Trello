<%= error_messages_for(f.object) %>

<table summary = "Cards for fields">
  <tr>
    <th>Select User</th>
    <td><%= f.select(:username,@users_list)%></td>
  </tr>

  <tr>
    <th>Task Name</th>
    <td><%= f.text_area(:name) %></td>
  </tr>
  
  <tr>
    <th>Card Status</th>
    <td><%= f.select(:status,Card.statuses.keys ) %></td>
  </tr> 
  <tr>
    <th>Deadline</th>
    <td><%= f.datetime_select(:deadline)%></td>
    
  </tr>     

</table>

<h1>Show Card</h1>

<table class = "table">
  <thead>
    <tr>
      <th scope = "col">UserName</th>
      <th scope = "col">Task</th>
      <th scope = "col">Status</th>
      <th scope = "col">Deadline</th>
      <th scope = "col">Created At</th>
      <th scope = "col">Updated At</th>
    </tr>
  </thead>
  
  <tbody>
    <tr>
      <td><%= @card.username %></td>
      <td><%= @card.name %></td>
      <td><%= @card.status %></td>
      <td><%= @card.deadline %></td>
      <td><%= @card.created_at %></td>
      <td><%= @card.updated_at %></td>
    </tr>
  </tbody>
  <%= link_to 'Add comment',  comments_new_path %>
  <br />
  <%= link_to 'Back', board_list_cards_path %>

</table>